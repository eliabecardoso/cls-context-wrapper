{
  "transform": {
    "^.+\\.(t|j)sx?$": "ts-jest"
  },
  "testRegex": "(/tests/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
  "modulePathIgnorePatterns": ["tests/performance"],
  "verbose": true,
  "silent": true,
  "detectOpenHandles": true,
  "collectCoverage": true,
  "coverageThreshold": {
    "global": {
      "statements": 92,
      "branches": 69,
      "functions": 100,
      "lines": 92
    }
  }
}
